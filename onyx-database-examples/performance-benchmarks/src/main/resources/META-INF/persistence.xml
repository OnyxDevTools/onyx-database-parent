<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
   http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">

    <!-- hsqldb -->

    <persistence-unit name="h2">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <properties>
            <property name="hibernate.archive.autodetection" key="class" />
            <property name="hibernate.dialect" key="org.hibernate.dialect.H2Dialect" />
            <property name="hibernate.connection.driver_class" key="org.h2.Driver" />
            <property name="hibernate.connection.url" key="jdbc:h2:file:${user.home}/OnyxBenchmark/h2" />
            <property name="hibernate.connection.user" key="sa" />
            <property name="hibernate.flushMode" key="FLUSH_AUTO" />
            <property name="hibernate.hbm2ddl.auto" key="update" />
        </properties>
    </persistence-unit>

    <!-- hsqldb -->

    <persistence-unit name="hsqldb">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <properties>
            <property name="hibernate.archive.autodetection" key="class" />
            <property name="hibernate.dialect" key="org.hibernate.dialect.HSQLDialect" />
            <property name="hibernate.connection.driver_class" key="org.hsqldb.jdbcDriver" />
            <property name="hibernate.connection.url" key="jdbc:hsqldb:file:${user.home}/OnyxBenchmark/hsql;shutdown=true" />
            <property name="hibernate.connection.user" key="sa" />
            <property name="hibernate.flushMode" key="FLUSH_AUTO" />
            <property name="hibernate.hbm2ddl.auto" key="update" />
        </properties>
    </persistence-unit>

    <!-- derby -->

    <persistence-unit name="derby">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <properties>
            <property name="hibernate.archive.autodetection" key="class" />
            <property name="hibernate.dialect" key="org.hibernate.dialect.DerbyTenSevenDialect" />
            <property name="hibernate.connection.driver_class" key="org.apache.derby.jdbc.EmbeddedDriver" />
            <property name="hibernate.connection.url" key="jdbc:derby:${user.home}/OnyxBenchmark/derby;create=true" />
            <property name="hibernate.flushMode" key="FLUSH_AUTO" />
            <property name="hibernate.hbm2ddl.auto" key="update" />
        </properties>
    </persistence-unit>

</persistence>